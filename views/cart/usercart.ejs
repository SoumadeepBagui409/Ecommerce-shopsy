<%-include("../partials/header");-%>
<%-include("../partials/navbar");-%>

<main class="container">
   <%-include("../partials/flash");-%>
    <div class="row">
        <div class="col-lg-6">
            <%for(let item of cart){%>
                           
                <div class="col-lg-12">
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                          <div class="col-md-4">
                            <img src="<%=item.img%>" class="img-fluid rounded-start" alt="product" style="height:100%;">
                          </div>
                          <div class="col-md-8">
                             <div class="card-body">
                                <h5 class="card-title"><%=item.name%></h5>
                                <p class="card-text"><%=item.price%> Rs</p>
                                <form action="/user/<%=currentUser._id%>/cart/<%=item._id%>?_method=DELETE" method="post">
                                    <button class="btn btn-sm btn-danger">remove</button>
                                  </form>
                             </div>
                              
                          </div>
                        </div>
                      </div>
                    </div>
                   <%}%>   
                </div>
                
                <div class="col-lg-3 mt-3">
                    <%let sum = 0%>
                    <ul class="list-group">
                        <%for(let item of cart){%>
                            <li class="list-group-item">
                                <strong><%=item.name%></strong>: <%=item.price%> Rs
                                <%sum+=item.price%>
                            </li>
                        <%}%>
                        <li class="list-group-item">
                            <strong>Total</strong>: <%=sum%> Rs
                        </li>

                            <a href="" class="btn btn-outline-success mt-3">pay Now</a>
                        
                        
                    </ul>
                </div>
        </div>
    </div>

</main>

<%-include("../partials/footer");-%>
